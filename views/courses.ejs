<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head.ejs') %>

<body>
    <h1>School Course Website</h1>

    <%- include('./partials/nav.ejs') %>

    <h2>Index of courses</h2>

    <% if (courses.length > 0) { %>
        <% courses.forEach(course => { %>
        <a href="/courses/<%= course._id %>">
         <h3 class="subject"><%= course.subject %></h3></a>
         <b><p class="credits"><%= course.credits %> credit hours</p></b>
         <p class="desc"><%= course.description %></p>
         <% }) %>
     <% } else { %>
         <p>There are no courses to display.</p>
     <% } %> 

</body>
</html>
